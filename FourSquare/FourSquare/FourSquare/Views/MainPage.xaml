<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:auxilliary="clr-namespace:FourSquare.Auxilliary"
             x:Class="FourSquare.Views.MainPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>

            <Frame Margin="5,5,5,5">
                <ListView ItemsSource="{Binding oc}" HasUnevenRows="True" SelectedItem="{Binding PVC, Mode=TwoWay}" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <auxilliary:PlaceViewCell/>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Frame>
            <StackLayout Orientation="Horizontal">
                <Button Text="Add A New Place" BackgroundColor="LightGray" BorderColor="LightBlue" CornerRadius="10" Margin="0,10,0,0" BorderWidth="4" Command="{Binding GoToNewPlaceCommand}" />
                <Button Text="Check Profile" BackgroundColor="LightGray" BorderColor="LightBlue" CornerRadius="10" Margin="0,10,0,0" BorderWidth="4" Command="{Binding GoToProfileCommand}" />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>