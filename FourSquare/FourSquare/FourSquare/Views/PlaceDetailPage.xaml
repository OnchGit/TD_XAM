<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="FourSquare.Views.PlaceDetailPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        
            <StackLayout>
                <Label Text="Location:" HorizontalOptions="Center" />
                <ContentView Content="{Binding PlaceMap, Mode=TwoWay}" HeightRequest="250"/>
                <Label Text="Comments:" HorizontalOptions="Center"/>
                <ListView HeightRequest="100"></ListView>
                <Entry Placeholder="Your Comment..."/>
                <Button Text="Post Comment" BackgroundColor="LightGray" BorderColor="LightBlue" CornerRadius="10" BorderWidth="4"/>
                <Button Text="GoBack" BackgroundColor="LightGray" BorderColor="LightBlue" CornerRadius="10" BorderWidth="4"/>
            </StackLayout>
        
    </ContentPage.Content>
</ContentPage>