<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:auxilliary="clr-namespace:App1.Auxilliary"
             x:Class="App1.Views.MainPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>

            <Frame Margin="5,5,5,5">
                <ListView ItemsSource="{Binding oc}" HasUnevenRows="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <auxilliary:PlaceViewCell />
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Frame>
            <Button Text="Add A New Place" BackgroundColor="White" BorderColor="LightBlue" CornerRadius="10" Margin="0,10,0,0" Command="{Binding GoToNewPlaceCommand}" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>